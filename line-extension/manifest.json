{
  "manifest_version": 2,
  "name": "Line auth example",
  "description": "Log into Line messenger app from a browser extension.",
  "version": "1.0.0",
  "background": {
    "scripts": ["background.js"]
  },
  "applications": { "gecko": { "id": "addon@example.com" } },
  "permissions": [
    "identity",
    "storage",
    "https://access.line.me/",
    "https://api.line.me/"
  ]
}
