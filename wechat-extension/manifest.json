{
  "manifest_version": 2,
  "name": "WeChat auth example",
  "description": "Log into WeChat messenger app from a browser extension.",
  "version": "1.0.0",
  "background": {
    "scripts": ["background.js"]
  },
  "applications": { "gecko": { "id": "addon@example.com" } },
  "permissions": [
    "identity",
    "storage",
    "https://open.weixin.qq.com/",
    "https://api.weixin.qq.com/"
  ]
}
